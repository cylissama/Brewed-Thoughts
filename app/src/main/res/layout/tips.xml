<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_coffee"
    android:orientation="vertical"
    tools:context=".Tips">

    <!-- FrameLayout for content -->

    <!-- Horizontal LinearLayout for buttons -->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20sp"
        android:layout_weight="1"
        android:background="@drawable/rounded_frame_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10sp">

        <Button
            android:id="@+id/methodsButton"
            android:textSize="12sp"
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:text="Methods"
            android:backgroundTint="@color/button_white"
            android:textColor="@color/dark_coffee"
            android:layout_margin="1sp"/>

        <Button
            android:id="@+id/brewersButton"
            android:textSize="12sp"
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:text="Brewers"
            android:backgroundTint="@color/button_white"
            android:textColor="@color/dark_coffee"
            android:layout_margin="1sp"/>

        <Button
            android:id="@+id/beansButton"
            android:textSize="12sp"
            android:layout_width="100sp"
            android:layout_height="match_parent"
            android:text="Beans"
            android:backgroundTint="@color/button_white"
            android:textColor="@color/dark_coffee"
            android:layout_margin="1sp"/>

<!--        <Button-->
<!--            android:id="@+id/tipsBackButton"-->
<!--            android:textSize="10sp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:text="@string/back"-->
<!--            android:backgroundTint="@color/button_white"-->
<!--            android:textColor="@color/dark_coffee"-->
<!--            android:layout_margin="1sp"/>-->

    </LinearLayout>
</LinearLayout>
